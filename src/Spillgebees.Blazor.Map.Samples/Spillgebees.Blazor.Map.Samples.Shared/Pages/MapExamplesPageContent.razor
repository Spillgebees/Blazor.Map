@using Spillgebees.Blazor.Map.Samples.Shared.Examples

<article class="article">
    <div class="flex justify-center items-center">
        <div class="bg-white my-8 p-8 border-2 border-gray-300 rounded-lg shadow-lg">
            <h1 class="mb-4">
                @Title
            </h1>

            <div class="container">
                <BasicMapExample />
            </div>
        </div>
    </div>
</article>

<!--suppress CssUnusedSymbol -->
<style>
    h1 {
        font-size:  2.5rem;
        font-weight:  bold;
    }

    h1, h3 {
        font-family: 'Roboto Mono', monospace;
    }

    h3 {
        margin-bottom: 0;
    }

    .article {
        height: 100vh;
        padding: 0 10px;
    }

    .container {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }
</style>

@code {
    [Parameter, EditorRequired]
    public string Title { get; set; } = "Spillgebees.Blazor.Map";
}
